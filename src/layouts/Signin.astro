<section class="bg-blue-500/5">

    <!-- Background Grid Start -->
    <div class="bg-[linear-gradient(to_right,#007bff25_1px,transparent_1px),linear-gradient(to_bottom,#007bff25_1px,transparent_1px)] bg-[size:80px_100px] [mask-image:radial-gradient(ellipse_55%_90%_at_50%_50%,#000_90%,transparent_100%)]">
        
        <!-- Sign In Container Start -->
        <div class="flex flex-col items-center justify-center py-8 px-4 mx-auto max-w-screen-md lg:py-16">
            <div class="p-6 mx-auto bg-white border border-blue-600/50 rounded-lg shadow sm:max-w-xl sm:p-8">

                <!-- Header -->
                <h2 class="text-xl font-bold leading-tight tracking-tight text-neutral-900 md:text-2xl">Sign in to your account</h2>

                <!-- Form Start -->
                <form class="mt-4 space-y-6 sm:mt-6" action="#">
                    <div class="grid gap-6 sm:grid-cols-2">
                        
                        <div>
                            <label for="email" class="block mb-2 text-sm font-medium text-neutral-900">Email</label>
                            <input type="email" name="email" id="email" class="flex w-full h-10 px-3 py-2 text-sm bg-white border rounded-md shadow-sm border-neutral-200/70 placeholder:text-neutral-400" placeholder="name@company.com" required="">
                        </div>

                        <div>
                            <label for="password" class="block mb-2 text-sm font-medium text-neutral-900">Password</label>
                            <input type="password" name="password" id="password" placeholder="••••••••" class="flex w-full h-10 px-3 py-2 text-sm bg-white border rounded-md shadow-sm border-neutral-200/70 placeholder:text-neutral-400" required="">
                        </div>

                    </div>

                    <div class="flex items-center">
                        <div class="w-full h-px bg-neutral-200"></div>
                        <div class="px-5 text-center text-neutral-500">or</div>
                        <div class="w-full h-px bg-neutral-200"></div>
                    </div>

                    <div class="space-y-3">

                        <a href="#" class="w-full inline-flex items-center justify-center py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-neutral-900 bg-white rounded-lg border border-neautral-200 hover:bg-neutral-50">
                            <svg class="size-5 mr-2" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <g clip-path="url(#clip0_13183_10121)"><path d="M20.3081 10.2303C20.3081 9.55056 20.253 8.86711 20.1354 8.19836H10.7031V12.0492H16.1046C15.8804 13.2911 15.1602 14.3898 14.1057 15.0879V17.5866H17.3282C19.2205 15.8449 20.3081 13.2728 20.3081 10.2303Z" fill="#3F83F8"/><path d="M10.7019 20.0006C13.3989 20.0006 15.6734 19.1151 17.3306 17.5865L14.1081 15.0879C13.2115 15.6979 12.0541 16.0433 10.7056 16.0433C8.09669 16.0433 5.88468 14.2832 5.091 11.9169H1.76562V14.4927C3.46322 17.8695 6.92087 20.0006 10.7019 20.0006V20.0006Z" fill="#34A853"/><path d="M5.08857 11.9169C4.66969 10.6749 4.66969 9.33008 5.08857 8.08811V5.51233H1.76688C0.348541 8.33798 0.348541 11.667 1.76688 14.4927L5.08857 11.9169V11.9169Z" fill="#FBBC04"/><path d="M10.7019 3.95805C12.1276 3.936 13.5055 4.47247 14.538 5.45722L17.393 2.60218C15.5852 0.904587 13.1858 -0.0287217 10.7019 0.000673888C6.92087 0.000673888 3.46322 2.13185 1.76562 5.51234L5.08732 8.08813C5.87733 5.71811 8.09302 3.95805 10.7019 3.95805V3.95805Z" fill="#EA4335"/></g><defs><clipPath id="clip0_13183_10121"><rect width="20" height="20" fill="white" transform="translate(0.5)"/></clipPath></defs>
                            </svg>                            
                            Sign in with Google
                        </a>

                        <a href="#" class="w-full inline-flex items-center justify-center py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-neutral-900 bg-white rounded-lg border border-neautral-200 hover:bg-neutral-50">
                            <svg class="size-5 mr-2 text-neutral-900" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M12 .297c-6.63 0-12 5.373-12 12c0 5.303 3.438 9.8 8.205 11.385c.6.113.82-.258.82-.577c0-.285-.01-1.04-.015-2.04c-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729c1.205.084 1.838 1.236 1.838 1.236c1.07 1.835 2.809 1.305 3.495.998c.108-.776.417-1.305.76-1.605c-2.665-.3-5.466-1.332-5.466-5.93c0-1.31.465-2.38 1.235-3.22c-.135-.303-.54-1.523.105-3.176c0 0 1.005-.322 3.3 1.23c.96-.267 1.98-.399 3-.405c1.02.006 2.04.138 3 .405c2.28-1.552 3.285-1.23 3.285-1.23c.645 1.653.24 2.873.12 3.176c.765.84 1.23 1.91 1.23 3.22c0 4.61-2.805 5.625-5.475 5.92c.42.36.81 1.096.81 2.22c0 1.606-.015 2.896-.015 3.286c0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>                            
                            Sign in with Github
                        </a>

                        <a href="#" class="w-full inline-flex items-center justify-center py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-neutral-900 bg-white rounded-lg border border-neautral-200 hover:bg-neutral-50">      
                            <svg class="size-5 mr-2 text-neutral-900" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M13.795 10.533L20.68 2h-3.073l-5.255 6.517L7.69 2H1l7.806 10.91L1.47 22h3.074l5.705-7.07L15.31 22H22zm-2.38 2.95L9.97 11.464L4.36 3.627h2.31l4.528 6.317l1.443 2.02l6.018 8.409h-2.31z"/></svg>                      
                            Sign in with Twitter (X)
                        </a>

                    </div>

                    <div class="flex items-center justify-between">
                        
                        <!-- Remember Me Checkbox -->
                        <div class="flex items-center">

                            <div class="flex items-center h-5">
                                <input id="remember" aria-describedby="remember" type="checkbox" class="size-4 border border-neutral-300 rounded bg-neutral-50" required="">
                            </div>

                            <div class="ml-3 text-sm">
                                <label for="remember" class="text-neutral-500">Remember me</label>
                            </div>

                        </div>
                        
                        <a href="/resetpassword" class="text-sm font-medium text-blue-500">Forgot password?</a>
                    
                    </div>
                    
                    <!-- Sign In Button -->
                    <button type="submit" class="w-full text-white bg-[#007BFF] border-2 border-[#007BFF] font-medium rounded-md text-sm px-4 py-2 text-center hover:bg-[#005EC3] hover:border-[#005EC3]">Sign in</button>
                
                </form>
                <!-- Form End -->

            </div>
        </div>
        <!-- Sign In Container End -->

    </div>
    <!-- Background Grid End -->

</section>